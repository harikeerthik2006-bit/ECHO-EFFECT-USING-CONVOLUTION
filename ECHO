clc; 
clear; 
close all; 
Fs = 44100; 
t = 0:1/Fs:2; 
x = sin(2*pi*440*t); 
delay = 0.4; 
alpha = 0.6; 
D = round(delay * Fs); 
h = zeros(1, D+1); 
h(1) = 1; 
h(end) = alpha; 
y = conv(x, h); 
y = y 
disp('Playing Echo Sound...'); 
sound(y, Fs); 
audiowrite('echo_output.wav', y, Fs); 
figure; 
subplot(2,1,1); 
plot(x); 
title('Original Signal'); 
subplot(2,1,2); 
plot(y); 
title('Echo Signal'); 
disp('Echo effect created and saved as echo_output.wav');
